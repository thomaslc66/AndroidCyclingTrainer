<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <tpi.lechaireth.com.androidcyclingtrainer.library.VerticalSeekBar
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/verticalBar_rpm"
        android:layout_marginLeft="15dp"
        android:indeterminate="false"
        android:layout_above="@+id/edtTxt_bpm" />

    <tpi.lechaireth.com.androidcyclingtrainer.library.VerticalSeekBar
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/verticalBar_bpm"
        android:layout_marginRight="15dp"
        android:indeterminate="false"
        android:layout_alignBottom="@+id/txtView_recup" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VALIDER"
        android:id="@+id/btn_validate_row"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/verticalBar_bpm"
        android:layout_alignEnd="@+id/verticalBar_bpm"
        android:layout_alignLeft="@+id/verticalBar_rpm"
        android:layout_alignStart="@+id/verticalBar_rpm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtTxt_time"
        android:hint="Minutes"
        android:inputType="number"
        android:text="Time"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtTxt_bpm"
        android:hint="Bpm"
        android:inputType="number"
        android:layout_alignLeft="@+id/verticalBar_bpm"
        android:layout_alignStart="@+id/verticalBar_rpm"
        android:layout_below="@+id/verticalBar_bpm" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtTxt_tour"
        android:hint="Rpm"
        android:inputType="number"
        android:layout_below="@+id/verticalBar_rpm"
        android:layout_alignLeft="@+id/verticalBar_rpm"
        android:layout_alignStart="@+id/verticalBar_rpm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Récupération"
        android:id="@+id/txtView_recup"
        android:layout_marginTop="88dp"
        android:layout_below="@+id/edtTxt_time"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/edtTxt_bpm"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="54dp"
        android:layout_toRightOf="@+id/txtView_recup"
        android:layout_toEndOf="@+id/txtView_recup" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_alignBottom="@+id/spinner"
        android:layout_toStartOf="@+id/txtView_recup"
        android:layout_toLeftOf="@+id/txtView_recup" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRAVAIL"
        android:id="@+id/textView5"
        android:layout_alignStart="@+id/edtTxt_tour"
        android:layout_above="@+id/spinner2"
        android:layout_alignLeft="@+id/spinner2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RYTHME"
        android:id="@+id/txtView_rythme"
        android:layout_alignStart="@+id/spinner"
        android:layout_above="@+id/spinner2"
        android:layout_alignLeft="@+id/spinner" />

</RelativeLayout>
